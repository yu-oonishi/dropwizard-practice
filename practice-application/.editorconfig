# Configuration file for EditorConfig: http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.properties]
charset = latin1

[*.md]
trim_trailing_whitespace = false

[*.{css,html,js,json,less,sass,scss,yml}]
indent_size = 2

[*.tsv]
indent_style = tab
